{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "yarn css:build && remix build",
    "dev": "concurrently \"yarn css:dev\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:win": "concurrently \"yarn css:dev\" \"node -r dotenv/config node_modules/@remix-run/dev/cli.js dev\"",
    "css:dev": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "css:build": "tailwindcss -o ./app/styles/tailwind.css",
    "lint:run": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@remix-run/vercel": "^1.0.6",
    "@supabase/supabase-js": "^1.28.5",
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-supabase": "^0.2.0",
    "remix": "^1.0.6",
    "remix-tailwind": "^0.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.4.0",
    "postcss": "^8.4.4",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
